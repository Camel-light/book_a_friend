<div class="container">
<ul>
  <li><%= @moment.category %></li>
  <li><%= @moment.activity %></li>
  <li><%= @moment.description %></li>
  <li><%= @moment.location %></li>
  <li><%= @moment.start_time %></li>
  <li><%= @moment.end_time %></li>
</ul>

